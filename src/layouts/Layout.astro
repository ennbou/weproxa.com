---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Weproxa - A powerful HTTP/HTTPS proxy debugger for macOS" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script defer src="https://cloud.umami.is/script.js" data-website-id="0aff05b2-b5a0-4142-ad4f-6d1d4239afd4"></script>
  </head>
  <body class="bg-gray-900 text-gray-100 min-h-screen">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
